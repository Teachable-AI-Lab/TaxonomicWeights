{
  "_comment": "Autoencoder with large kernel size (7x7) for wider receptive fields",
  "description": "Large Kernel CIFAR-10 Taxonomic Autoencoder: 3 encoder layers with kernel_size=7 for larger receptive fields",
  "experiment_name": "large_kernel_k7",
  "data": {
    "batch_size": 128,
    "data_root": "./data/cifar10"
  },
  "model": {
    "latent_dim": 256,
    "temperature": 1.0,
    "use_maxpool": true,
    "encoder_layers": [
      {
        "layer_type": "taxonomic_conv",
        "n_layers": 5,
        "kernel_size": 7,
        "stride": 2,
        "padding": 3,
        "_comment": "32x32x3 -> 16x16x63 (kernel_size=7, padding=3)"
      },
      {
        "layer_type": "taxonomic_conv",
        "n_layers": 6,
        "kernel_size": 7,
        "stride": 2,
        "padding": 3,
        "_comment": "16x16x63 -> 8x8x127 (kernel_size=7, padding=3)"
      },
      {
        "layer_type": "taxonomic_conv",
        "n_layers": 7,
        "kernel_size": 7,
        "stride": 1,
        "padding": 3,
        "_comment": "8x8x127 -> 8x8x255 (kernel_size=7, padding=3, latent space)"
      }
    ],
    "decoder_layers": [
      {
        "layer_type": "taxonomic_deconv",
        "n_layers": 6,
        "kernel_size": 7,
        "stride": 2,
        "padding": 3,
        "output_padding": 1,
        "_comment": "8x8x255 -> 16x16x127 (kernel_size=7, padding=3)"
      },
      {
        "layer_type": "taxonomic_deconv",
        "n_layers": 5,
        "kernel_size": 7,
        "stride": 2,
        "padding": 3,
        "output_padding": 1,
        "_comment": "16x16x127 -> 32x32x63 (kernel_size=7, padding=3), then final conv to 32x32x3"
      }
    ]
  },
  "training": {
    "epochs": 20,
    "learning_rate": 0.001
  },
  "analysis": {
    "checkpoint_path": "outputs/cifar10/training/large_kernel_k7/final_model.pt",
    "num_latent_batches": 50,
    "num_reconstruction_batches": 20,
    "num_multiple_recon_images": 8,
    "num_reconstructions_per_image": 8,
    "num_activation_images": 3
  },
  "output": {
    "training_save_dir": "outputs/cifar10/training/large_kernel_k7",
    "analysis_save_dir": "outputs/cifar10/analysis/large_kernel_k7"
  }
}
