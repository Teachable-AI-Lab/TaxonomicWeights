{
  "_comment": "Minimal one-layer autoencoder for testing",
  "description": "Minimal CIFAR-10 Taxonomic Autoencoder: Single encoder layer (32x32->4x4) and single decoder layer (4x4->32x32)",
  "experiment_name": "minimal_one_layer",
  "data": {
    "batch_size": 128,
    "data_root": "./data/cifar10"
  },
  "model": {
    "latent_dim": 256,
    "temperature": 1.0,
    "use_maxpool": true,
    "encoder_layers": [
      {
        "layer_type": "taxonomic_conv",
        "n_layers": 7,
        "kernel_size": 3,
        "stride": 2,
        "padding": 1,
        "_comment": "32x32x3 -> 16x16x255, then maxpool 3 times: 16->8->4->2 spatial (but we'll use stride 2 three times)"
      },
      {
        "layer_type": "taxonomic_conv",
        "n_layers": 7,
        "kernel_size": 3,
        "stride": 2,
        "padding": 1,
        "_comment": "16x16x255 -> 8x8x255"
      },
      {
        "layer_type": "taxonomic_conv",
        "n_layers": 7,
        "kernel_size": 3,
        "stride": 2,
        "padding": 1,
        "_comment": "8x8x255 -> 4x4x255 (latent space)"
      }
    ],
    "decoder_layers": [
      {
        "layer_type": "taxonomic_deconv",
        "n_layers": 7,
        "kernel_size": 3,
        "stride": 2,
        "padding": 1,
        "output_padding": 1,
        "_comment": "4x4x255 -> 8x8x255"
      },
      {
        "layer_type": "taxonomic_deconv",
        "n_layers": 7,
        "kernel_size": 3,
        "stride": 2,
        "padding": 1,
        "output_padding": 1,
        "_comment": "8x8x255 -> 16x16x255"
      },
      {
        "layer_type": "taxonomic_deconv",
        "n_layers": 7,
        "kernel_size": 3,
        "stride": 2,
        "padding": 1,
        "output_padding": 1,
        "_comment": "16x16x255 -> 32x32x255, then final conv to 32x32x3"
      }
    ]
  },
  "training": {
    "epochs": 20,
    "learning_rate": 0.001
  },
  "analysis": {
    "checkpoint_path": "outputs/training/minimal_one_layer/final_model.pt",
    "num_latent_batches": 50,
    "num_reconstruction_batches": 20,
    "num_multiple_recon_images": 8,
    "num_reconstructions_per_image": 8,
    "num_activation_images": 3
  },
  "output": {
    "training_save_dir": "outputs/training/minimal_one_layer",
    "analysis_save_dir": "outputs/analysis/minimal_one_layer"
  }
}
