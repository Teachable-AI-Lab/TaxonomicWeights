{
  "description": "Unified configuration for CIFAR-10 Taxonomic Autoencoder training and analysis",
  "data": {
    "batch_size": 128,
    "data_root": "./data/cifar10"
  },
  "model": {
    "latent_dim": 256,
    "temperature": 1.0,
    "encoder_kernel_sizes": [5, 5, 5],
    "decoder_kernel_sizes": [5, 5, 5],
    "encoder_strides": [2, 2, 1],
    "decoder_strides": [2, 2, 1],
    "decoder_paddings": [2, 2, 2],
    "decoder_output_paddings": [1, 1, 0],
    "encoder_n_layers": [3, 4, 5],
    "decoder_n_layers": [5, 4, 1],
    "use_maxpool": false
  },
  "training": {
    "epochs": 20,
    "learning_rate": 0.001
  },
  "analysis": {
    "checkpoint_path": "outputs/training/20260208_102852/final_model.pt",
    "num_latent_batches": 50,
    "num_reconstruction_batches": 20,
    "num_multiple_recon_images": 8,
    "num_reconstructions_per_image": 8,
    "num_activation_images": 3
  },
  "output": {
    "training_save_dir": "outputs/training",
    "analysis_save_dir": "outputs/analysis"
  }
}
